

def proceso_notas():
    """Esta función lo que hace primero es preguntar con cuantos ejercicios
    tiene cada examen y con que porcentaje de puntos bien hechos se aprueba.
    Luego pregunta cuantos ejercicios se hicieron bien en cada prueba y
    muestra si aprobó o no, hasta que se introduce el caracter "*" """
    print("")
    cant_ejer = input("¿Cuantos ejercicios cada examen? ")
    if isinstance(cant_ejer, str, complex, float):
        proceso_notas()
        return "Algo ha salido mal"
    int(cant_ejer)
    if 100 < cant_ejer < 0:
        proceso_notas()
        return "Algo ha salido mal"
    print("Cual es el porcentaje de ejercicios que deben estar correctos para",
          "que el alumno apruebe? ")
    cant_nece = input()
    if isinstance(cant_nece, str):
        print("No esta permitido introducir letras")
        proceso_notas()
        return "Algo ha salido mal"
    if 0 > cant_nece > 100:
        print("No puede ser mas del 100 % ni menos de 0 %")
        proceso_notas()
        return "Algo ha salido mal"
    i = 0
    pruebas_alumnos()


def pruebas_alumnos(cant_ejer, cant_nece):
    while True:
        i += 1
        print("Cuantos ejercicios resolvio correctamente el alumno ", i)
        cant_corr = input()
        if cant_corr == "*":
            print("Fin de la lista de alumnos")
            return
        elif cant_ejer < int(cant_corr):
            print("No pudo haber hecho más ejercicios de los que había")
            i -= 1
        else:
            if int(cant_corr) / cant_ejer >= cant_nece / 100:
                print("El alumno 1 resolvió el",
                      100 * (round(int(cant_corr) / cant_ejer, 2)),
                      "%", " del examen correctamente, por lo tanto aprobó")
            else:
                print("El alumno 1 resolvió el",
                      100*(round(int(cant_corr) / cant_ejer, 2)),
                      "%", "del examen correctamente, por lo tanto, desaprobó")
            print("")
proceso_notas()
